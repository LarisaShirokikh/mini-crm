# Application
PROJECT_NAME=Mini-CRM
VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database (async for application)
DATABASE_URL=postgresql+asyncpg://crm_user:crm_password@localhost:5432/mini_crm

# Database (sync for Alembic migrations)
DATABASE_URL_SYNC=postgresql://crm_user:crm_password@localhost:5432/mini_crm

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API
API_V1_PREFIX=/api/v1